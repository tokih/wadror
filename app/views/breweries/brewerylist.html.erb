<h2>Breweries</h2>

<div ng-app="myApp2" ng-controller="BreweriesController">

  search:  <input ng-model="searchText">

  <table class="table table-hover">
    <thead>
    <th> <a ng-click="sort_by('name')">name</a> </th>
    <th> <a ng-click="sort_by('year')">style</a> </th>
    <th> <a ng-click="sort_by('active')">active</a> </th>
    </thead>
    <tr ng-repeat="brewery in breweries | orderBy:order | filter:searchText">
      <td>{{brewery.name}}</td>
      <td>{{brewery.year}}</td>
      <td>{{brewery.active}}</td>
    </tr>
  </table>

</div>
