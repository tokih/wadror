<h1>New membership</h1>

<p id="notice"><%= notice %></p>

<%= form_for(@membership) do |m| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %>&nbsp;prohibited membership from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= m.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :to_s) %>
  <%= m.submit %>
<% end %>

<%= link_to 'Back', memberships_path %>
