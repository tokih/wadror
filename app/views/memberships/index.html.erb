<h1>Listing memberships</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= link_to "#{membership.to_s}", membership %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn'btn'danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Membership', new_membership_path, class: 'btn btn-primary' %>
