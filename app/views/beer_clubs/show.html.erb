<p id="notice"><%= notice %></p>

<p>
  <%= @beer_club.to_s %>
</p>

<% unless @beer_club.users.empty? %>
  <p>
    <strong>Members</strong><br />
  </p>

  <ul>
  <% @beer_club.users.each do |user| %>
    <li><%= link_to "#{user.to_s}", user %></li>
  <% end %>
<% else %>
  <p>Club does not yet have any members!</p>
<% end %>

<% if current_user and not current_user.beer_clubs.include? @beer_club %>
  <h4>join this club:</h4>
  
  <%= form_for(@membership) do |m| %>
    <%= m.hidden_field :beer_club_id %>
    <%= m.submit value:"join", class: 'btn btn-primary' %>
  <% end %>
<% elsif current_user and current_user.beer_clubs.include? @beer_club %>
   <%= form_for(@membership, method: "delete") do |f| %>
      <%= f.hidden_field :beer_club_id %>
      <%= f.submit value: "end the membership", class: 'btn btn-primary' %>
   <% end %>
<% elsif current_user %>
  <p>You are a member of this club</p>

<% else %>
  <p>You need to login to create/view a membership with this club</p>
<% end %> 
<%= edit_and_destroy_buttons(@beer_club) %>
